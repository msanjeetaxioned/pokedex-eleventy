---
layout: layouts/base.njk

indexvalue: 1
pagination:
    data: pokemons
    size: 12
    pageNumber: 1

backButton: false
---

<ul class='pokedex'>
    {% for pokemon in pagination.items %}
    <li class='pokemon'>
        <figure>
            <img src='{{pokemon.sprites.front_default}}' alt='{{pokemon.name}} Image'>
        </figure>
        <div class='black-bar'>
        </div>
        <span class='circle'>.</span>
        <div class='pokemon-info'>
            <h2>
                <a href="/pokemons/{{pokemon.name}}" title="{{pokemon.name}}">{{pokemon.name}}</a>
            </h2>
            <p>
                type:&nbsp;
                {% if pokemon.types|length > 1 %}
                    {{ pokemon.types[0].type.name }},&nbsp;{{ pokemon.types[1].type.name }}
                {% else %}
                    {{ pokemon.types[0].type.name }}
                {% endif %}
            </p>
        </div>
    </li>
    {% endfor %}
</ul>

<ul class='pages'>
    {% if pagination.href.previous %}<li class='page-number'><a href="{{ pagination.href.previous }}">Prev</a></li>{% endif %}
    {% for page in (pagination.pages) -%}
        <li class='page-number'>
            <a href="/{{loop.index}}" class="{% if pagination.pageNumber === loop.index %}active{% endif %}">{{loop.index}}</a>
        </li>
    {%- endfor %}
    {% if pagination.href.next %}<li class='page-number'><a href="{{ pagination.href.next }}">Next</a></li>{% endif %}
</ul>